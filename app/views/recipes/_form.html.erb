<%= form_for(recipe) do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :international %>
    <%= f.check_box :international %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :dietary %>
    <%= f.text_field :dietary %>
  </div>

  <div class="field">
    <%= f.select(:course_id, @courses.collect { |c| [c.name, c.id]}, {include_blank: "Select a Course Type"}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
